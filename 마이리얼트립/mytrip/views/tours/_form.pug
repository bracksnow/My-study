.form-group
  label(for="title") 주제
  input.form-control(type="text", name="title", placeholder="여행주제를 입력하시오", value=tour.title)
.form-group
  label(for="tour_content") 여행계획
  textarea#ckeditor(name='content')=tour.content
.form-group
  label(for="date") 여행날짜
  input.form-control(type = 'date',name="date", placeholder="여행날짜를 yyyy/mm/dd/의 형식으로 입력하시오", value = tour.date)
.form-group
  label(for="day") 기간
  input.form-control(type="number", name="day", placeholder="여행기간을 입력하시오", value=tour.day)
.form-group
  label(for="price") 1인당 가격
  input.form-control(type="number", name="price", placeholder="1인당 가격을 입력하시오", value=tour.price)
.form-group
  label(for="country") 나라
  input.form-control(type="text", name="country", placeholder="여행 국가를 입력하시오", value=tour.country)
.form-group
  label(for="city") 도시
  input.form-control(type="text", name="city", placeholder="여행 국가에서 방문하는 도시를 입력하시오", value=tour.city)
.form-group
  label(for='img') 사진
  input.form-control(type="file", name="img")
.form-group
  label(for="course") 여행코스
  input#city(type='text', placeholder='도시')
  input#place(type='text', placeholder='여행코스', value = tour.course)
  input.add-row(type='button', value='Add Row')
  table
    thead
      tr
        th 선택
        th 도시
        th 여행코스
    tbody
      tr
        td
          input(type='checkbox', name='record')

  button.delete-row(type='button') Delete Row
  
  script(type='text/javascript').
    $(document).ready(function(){
    $(".add-row").click(function(){
    var name = $("#city").val();
    var email = $("#place").val();
    var markup = "<tr><td><input type='checkbox' name='record'></td><td>" + name + "</td><td>" + email + "</td></tr>";
    $("table tbody").append(markup);
    });
    $(".delete-row").click(function(){
    $("table tbody").find('input[name="record"]').each(function(){
    if($(this).is(":checked")){
    $(this).parents("tr").remove();}
    });
    });
    });
  
  script(type='text/javascript').
    BasicEditor
    .create(document.querySelector('#ckeditor'), {
    language: 'ko',
    })
    .catch(error => {
    console.error(error);
    });





